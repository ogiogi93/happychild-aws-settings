# -*- mode: ruby -*-
# vi: set ft=ruby :

ec2 "vpc-0aa7f3b33f1e7c7a4" do
  security_group "ecs-staging" do
    description "ecs-staging"

    ingress do
      permission :tcp, 22..22 do
        groups(
          "bastion",
        )
      end
      permission :tcp, 80..80 do
        groups(
          "elb-private",
          "elb-public",
        )
      end
    end

    egress do
      permission :any do
        ip_ranges(
          "0.0.0.0/0"
        )
      end
    end
  end
end
